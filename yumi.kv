#:kivy 2.0.0

<Manager>:
    Menu:
        name: "menu"

    TextBoxContainer:
        name: "textBoxContainer"

    Instructions:
        name: "instructions"

<Menu>:
    BoxLayout:
        orientation: "vertical"
        padding: root.width*0.35, root.height*0.15
        spacing: "25dp"
        canvas:
            Color:
                rgba: 0.82, 0.82, 0.82, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: "icons/logo.png"
            size_hint_y: 3
            allow_stretch: True
        RoundButton:
            font_size: 18
            text: "Transcrição de texto"
            size_hint_y: None
            height: "60sp"
            on_release: 
                app.root.current = "textBoxContainer"
                root.manager.transition.direction = "left"

        RoundButton:
            font_size: 18
            text: "Instruções de uso"
            size_hint_y: None
            height: "60sp"
            on_release: 
                app.root.current = "instructions"
                root.manager.transition.direction = "left"

        RoundButton:
            font_size: 18
            text: "Sair"
            size_hint_y: None
            height: "60sp"
            on_release: root.confirm_exit()

<TextBoxContainer>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            background_normal: ''
            background_color: 0.1, 0.1, 1, 0.65
            ActionView:
                ActionPrevious:
                    app_icon: "icons/logo.png"
                    app_icon_width: 90
                    markup: True
                    title: "[b]Transcrição de texto[/b]"
                    on_release: 
                        app.root.current = "menu"
                        root.manager.transition.direction = "right"
                ActionButton:
                    markup: True
                    text: "[b]Exportar para docx[/b]"
                    on_release: root.docxBuilder()
                ActionSeparator:
                ActionButton:
                    markup: True
                    text: "[b]Sair[/b]"
                    on_release: app.root.get_screen("menu").confirm_exit()
        ScrollView:
            BoxLayout:
                id: textBox
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            padding: self.width/2 - 50, 10, 30, 10
            size_hint_y: None
            height: "60sp"
            RoundButton:
                size_hint_x: None
                width: 100
                on_release: root.initRecorder()
                Image:
                    id: image_mic
                    source: "icons/mic.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

<Instructions>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            background_color: 0.1, 0.1, 1, 0.65
            ActionView:
                ActionPrevious:
                    app_icon: "icons/logo.png"
                    app_icon_width: 90
                    markup: True
                    title: "[b]Instruções de uso[/b]"
                    on_release: 
                        app.root.current = "menu"
                        root.manager.transition.direction = "right"
                ActionSeparator:
                ActionButton:
                    markup: True
                    text: "[b]Sair[/b]"
                    on_release: app.root.get_screen("menu").confirm_exit()
        ScrollView:
            BoxLayout:
                id: textBoxIntructions
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

<LabelBox>:
    markup: True
    size_hint: (1, None)
    font_size: sp(15)
    color: (0, 0, 0 ,1)

<CustomDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')
